<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.the_next_development.drawer.GroupFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/C_Group"
            android:layout_width="118dp"
            android:layout_height="55dp"
            android:layout_marginTop="40dp"
            android:text="@string/c_group"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/J_Group"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/J_Class"
            android:layout_width="117dp"
            android:layout_height="55dp"
            android:layout_marginTop="40dp"
            android:text="@string/j_class"
            app:layout_constraintEnd_toStartOf="@+id/J_Group"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/J_Group"
            android:layout_width="117dp"
            android:layout_height="55dp"
            android:layout_marginTop="40dp"
            android:text="@string/j_group"
            app:layout_constraintEnd_toStartOf="@+id/C_Group"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/J_Class"
            app:layout_constraintTop_toTopOf="parent" />

        <ListView
            android:id="@+id/Class_List"
            android:layout_width="368dp"
            android:layout_height="392dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="105dp"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
